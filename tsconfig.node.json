{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "lib": ["ESNext"],
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": [
    "gulpfile/**/*",
    "scripts/**/*",
    "packages/theme-chalk/*",
    "packages/element-ultra/version.ts",
    "packages/element-ultra/package.json",
    "play/**/*",
    "docs/**/*"
  ],
  "exclude": ["**/__tests__/**", "**/tests/**", "**/dist"]
}